@using DacSan3Mien.Areas.Admin.Models.ViewModel
@model List<OrderViewModel>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 main-chart">
    <div class="col-lg-12">
        <h3 class="col-lg-11 text-left"> Danh sách đặt hàng</h3>
        @*<a href="@Url.Action(" Create")" class="btn btn-primary col-lg-1 text-right" style="margin-top: 15px;">Thêm mới</a>*@
    </div>
    <table class="table table-striped table-advance table-hover table-bordered">
        <hr width="100%" size="1px" style="margin-top: 70px;">
        <thead>
            <tr>
                <th class="text-center"><i class="fa fa-file-code-o"></i> Mã</th>
                <th class="text-center"><i class="fa fa-user"></i> Họ tên</th>
                <th class="text-center"><i class="fa fa-phone"></i> Số điện thoại</th>
                <th class="text-center"><i class="fa fa-product-hunt"></i> Tên sản phẩm</th>
                <th class="text-center"><i class="fa fa-sort-amount-asc"></i> Số lượng</th>
                <th class="text-center">Đơn giá (vnđ)</th>
                <th class="text-center"> Thành tiền (vnđ)</th>
                <th class="text-center"><i class="fa fa-edit"></i> Tùy chọn</th>
            </tr>
        </thead>
        <tbody class="user-list">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center" id="user-id">@item.userId</td>
                    <td>@item.userName</td>
                    <td class="text-center">@item.phone</td>
                    <td>@item.productName</td>
                    <td class="text-center">@item.quantity</td>
                    <td class="text-center">@String.Format("{0:0,0}", @item.price)</td>
                    <td class="text-center">@String.Format("{0:0,0}", @item.amount)</td>
                    <td class="text-center">
                        <button class="btn btn-success btn-xs"><i class="fa fa-info-circle"></i></button>
                        <button class="btn btn-primary btn-xs"><i class="fa fa-pencil "></i></button>
                        <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
