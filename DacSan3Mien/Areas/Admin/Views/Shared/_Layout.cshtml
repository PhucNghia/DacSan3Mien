<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Dashboard">
    <meta name="keyword" content="Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="~/Assets/images/favicon.jpg" />
    <title>Quản lý | Đặc sản 3 miền</title>

    @*@Styles.Render("~/Areas/Assets/lib/js/layout")*@
    <link href="~/Areas/Admin/Assets/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/Assets/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Assets/lib/css/zabuto_calendar.css">
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Assets/lib/gritter/css/jquery.gritter.css" />
    <link href="~/Areas/Admin/Assets/lib/css/style.css" rel="stylesheet">
    <link href="~/Areas/Admin/Assets/lib/css/style-responsive.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Assets/lib/css/bootstrap-fileupload.css" />
    <!--Notify-->
    @Styles.Render("~/Content/notifycss")
    <!--Custom-->
    <link href="~/Areas/Admin/Assets/css/Product/form.css" rel="stylesheet" />

</head>

<body>
    <section id="container">
        <header class="header black-bg">
            <div class="sidebar-toggle-box">
                <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Chuyển đổi điều hướng"></div>
            </div>
            <!--logo start-->
            <a href="@Url.Action("Index", "Home", new { area = "" })" class="logo"><b>Đặc sản<span> 3 miền</span></b></a>
            <!--logo end-->
            <div class="nav notify-row" id="top_menu">
                <!--  notification start -->
                <ul class="nav top-menu">
                    <!-- notification dropdown start-->
                    <li id="header_notification_bar" class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="index.html#">
                            <i class="fa fa-bell-o"></i>
                            <span class="badge bg-warning">2</span>
                        </a>
                        <ul class="dropdown-menu extended notification">
                            <div class="notify-arrow notify-arrow-yellow"></div>
                            <li>
                                <p class="yellow">Bạn có 2 thông báo</p>
                            </li>
                            <li>
                                <a href="index.html#">
                                    <span class="label label-warning"><i class="fa fa-bell"></i></span>
                                    User 1 đã đặt hàng
                                    <span class="small italic">40p trước</span>
                                </a>
                            </li>
                            <li>
                                <a href="index.html#">
                                    <span class="label label-warning"><i class="fa fa-bell"></i></span>
                                    User1 đã đăng ký
                                    <span class="small italic">50p trước</span>
                                </a>
                            </li>
                            <li>
                                <a href="index.html#">Đánh dấu đã đọc</a>
                            </li>
                        </ul>
                    </li>
                    <!-- notification dropdown end -->
                </ul>
                <!--  notification end -->
            </div>
            <div class="top-menu">
                <ul class="nav pull-right top-menu">
                    <li><a class="logout" href="login.html">Đăng xuất</a></li>
                </ul>
            </div>
        </header>
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                @{
                    var currentController = this.ViewContext.RouteData.Values["controller"].ToString();
                }

                <ul class="sidebar-menu" id="nav-accordion">
                    <li>
                        <a class="@Html.activeNavbar(currentController, "Statistical")" href="@Url.Action("Index", "Statistical")">
                            <i class="fa fa-bar-chart"></i><span>Thống kê</span>
                        </a>
                    </li>
                    <li>
                        <a class="@Html.activeNavbar("User", currentController)" href="@Url.Action("Index", "User")">
                            <i class="fa fa-user"></i><span>Quản lý người dùng</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a class="@Html.activeNavbar("Product", currentController)" href="@Url.Action("Index", "Product")">
                            <i class="fa fa-eercast"></i><span>Quản lý sản phẩm</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="@Url.Action("Index", "Order")" class="@Html.activeNavbar("Order", currentController)">
                            <i class="fa fa-shopping-cart"></i><span>Quản lý đặt hàng</span>
                        </a>
                        @*<ul class="sub">
                            <li><a href="#">Đặt hàng thành công</a></li>
                            <li><a href="#">Đơn đã hủy</a></li>
                        </ul>*@
                    </li>
                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>

        <section id="main-content">
            <section class="wrapper">
                <div class="row">
                    <!--Notify-->
                    <input type="hidden" id="success" value="@TempData["success"]" />
                    <input type="hidden" id="error" value="@TempData["error"]" />

                    @RenderBody()
                </div>
            </section>
        </section>
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer" style="margin-top: 97px;">
            <div class="text-center">
                <p>
                    &copy; Copyrights <strong>Dashio</strong>. All Rights Reserved
                </p>
                <div class="credits">
                    Created with Dashio template by <a href="https://templatemag.com/">TemplateMag</a>
                </div>
                <a href="index.html#" class="go-top">
                    <i class="fa fa-angle-up"></i>
                </a>
            </div>
        </footer>
        <!--footer end-->
    </section>
    <script src="~/Areas/Admin/Assets/lib/js/jquery.min.js"></script>
    @*<script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>*@
    <script src="~/Areas/Admin/Assets/lib/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="~/Areas/Admin/Assets/lib/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/Areas/Admin/Assets/lib/js/jquery.scrollTo.min.js"></script>
    <script src="~/Areas/Admin/Assets/lib/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/Areas/Admin/Assets/lib/js/jquery.sparkline.js"></script>
    <script src="~/Areas/Admin/Assets/lib/js/common-scripts.js"></script>
    <script type="text/javascript" src="~/Areas/Admin/Assets/lib/js/jquery.gritter.js"></script>
    <script type="text/javascript" src="~/Areas/Admin/Assets/lib/js/gritter-conf.js"></script>
    <script src="~/Areas/Admin/Assets/lib/js/sparkline-chart.js"></script>
    <script src="~/Areas/Admin/Assets/lib/js/zabuto_calendar.js"></script>
    <script type="text/javascript" src="~/Areas/Admin/Assets/lib/js/bootstrap-fileupload.js"></script>
    <!--Notify-->
    @Scripts.Render("~/Content/notifyjs")

    <!--Sweet alert-->
    <link href="~/Content/sweetalert/sweetalert.css" rel="stylesheet" />
    <script src="~/Content/sweetalert/sweetalert.js"></script>
    <script src="~/Content/sweetalert/sweetalert.min.js"></script>
    <!--Index product-->
    <script src="~/Areas/Admin/Assets/js/IndexProduct.js"></script>
    <!--FormProduct-->
    <script src="~/Areas/Admin/Assets/js/FormProduct.js"></script>
    <!--FormUser-->
    <script src="~/Areas/Admin/Assets/js/FormUser.js"></script>
    @*@Scripts.Render("~/Areas/Assets/lib/js/layout")*@
    <script type="application/javascript">
        $(document).ready(function() {
          $("#my-calendar").zabuto_calendar({
          });
        });
    </script>
</body>

</html>
