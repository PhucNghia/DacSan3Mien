<div class="site">
    <section class="noo-page-heading eff heading-6">
        <div class="container">
            <div class="noo-heading-content">
                <h1 class="page-title eff">Chi tiết sản phẩm</h1>
                <div class="noo-page-breadcrumb eff">
                    <a href="index.html" class="home">Đặc sản 3 miền</a>/<span>Chi tiết</span>
                </div>
            </div>
        </div>
    </section>
    <div class="main">
        <div class="commerce single-product noo-shop-main">
            <div class="container">
                <div class="row">
                    <div class="noo-main col-md-9">
                        <div class="product">
                            <div class="single-inner">
                                <div class="images">
                                    <div class="product-simple-image">
                                        <img width="300" height="381" src="~/Content/images/@Model.image" alt="" />
                                    </div>
                                </div>
                                <div class="summary entry-summary">
                                    <h1 class="product_title entry-title">@Model.productName</h1>
                                    <p class="price"><span class="amount">@Model.price VND</span></p>
                                    <p class="description">@Model.description</p>
                                    <div class="product_meta">
                                        <span class="posted_in">Vị trí: @Model.regionName</span>
                                    </div>
                                    <form class="cart">
                                        <div class="quantity">
                                            <input type="number" step="1" min="1" name="quantity" value="1" title="Qty" class="input-text qty text" size="4" />
                                        </div>
                                        <button type="submit" class="single_add_to_cart_button button">Thêm vào giỏ</button>
                                    </form>
                                    <div class="yith-wcwl-add-to-wishlist">
                                        <div class="yith-wcwl-add-button">
                                            <a href="#" class="add_to_wishlist"></a>
                                        </div>
                                    </div>
                                    <div class="clear"></div>
                                    <div class="noo-social-share">
                                        <span>Chia sẻ:</span>
                                        <a href="#share" class="noo-share" title="Share on Facebook">
                                            <i class="fa fa-facebook"></i>
                                        </a>
                                        <a href="#share" class="noo-share" title="Share on Twitter">
                                            <i class="fa fa-twitter"></i>
                                        </a>
                                        <a href="#share" class="noo-share" title="Share on Google+">
                                            <i class="fa fa-google-plus"></i>
                                        </a>
                                        <a href="#share" class="noo-share" title="Share on Pinterest">
                                            <i class="fa fa-pinterest"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="commerce-tabs">
                                <ul class="nav nav-tabs tabs">
                                    <li class="active">
                                        <a data-toggle="tab" href="#tab-1">Chi tiết</a>
                                    </li>
                                    @*<li>
                                            <a data-toggle="tab" href="#tab-2">Reviews</a>
                                        </li>*@
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane fade in active" id="tab-1">
                                        <p>@Model.description</p>
                                    </div>
                                </div>
                            </div>
                            <div class="related products">
                                <h2>Sản phẩm liên quan</h2>
                                <div class="products row product-grid">
                                    <div class="masonry-item noo-product-column col-md-4 col-sm-6 product">
                                        <div class="noo-product-inner">
                                            <div class="noo-product-thumbnail">
                                                <a href="@Url.Action("Show", "Product")">
                                                    <img width="600" height="760" src="~/Assets/images/product/product_4.jpg" alt="" />
                                                </a>
                                                <div class="noo-rating">
                                                    <div class="star-rating">
                                                        <span style="width:20%"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="noo-product-title">
                                                <h3><a href="@Url.Action("Show", "Product")">Carrots</a></h3>
                                                <span class="price"><span class="amount">&#36;1.05</span></span>
                                                <div class="noo-product-action">
                                                    <div class="noo-action">
                                                        <a href="#" class="button product_type_simple add_to_cart_button">
                                                            <span>Thêm vào giỏ</span>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="masonry-item noo-product-column col-md-4 col-sm-6 product">
                                        <div class="noo-product-inner">
                                            <div class="noo-product-thumbnail">
                                                <a href="@Url.Action("Show", "Product")">
